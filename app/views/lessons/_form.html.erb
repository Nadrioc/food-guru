<div class="container ">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for(@lesson) do |f| %>
      <%= f.input :title %>
      <%= f.input :location %>
      <%= f.input :starts_at %>
      <%= f.input :cuisine, collection: [ "French", "Mexican", "Chinese", "Japanese", "German", "American", "Italian", "Indonesian", "Peruvian", "Argentinien", "Spanish" ] %>
      <%= f.input :price %>
      <%= f.input :capacity %>
      <%= f.input :description, as: :text  %>
      <%= f.input :image %>
      <%= f.input :image_cache, as: :hidden %>
      <br>
      <%= f.submit class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
<br>
