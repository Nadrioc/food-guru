<div class="container">
  <div class="row">
    <% @lessons.each do |lesson| %>
      <div class="col-xs-12 col-sm-4 col-md-4">
        <%= link_to lesson_path(lesson) do %>
          <div class="card-whole">
            <div class="card-top" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url('<%= cl_image_path lesson.image, height: 300, width: 400, crop: :fill %>')">
              <img class="card-user" src="https://avatars3.githubusercontent.com/u/10833329?s=460&v=4">
              <div class="card-title">
                <h2><%= lesson.title %></h2>
              </div>
              <div class="card-location">
                <h3><i class="fas fa-map-marker"></i><%= lesson.location %></h3>
              </div>
            </div>
            <div class="card-bottom">
              <div class="card-category">
                <p><%= lesson.cuisine %></p>
              </div>
              <div class="card-description ">
                <p><%= lesson.description %></p>
              </div>
              <div class="card-label-container">
                <div class="card-price">
                  <p>â‚¬<%= lesson.price.to_i %></p>
                </div>
                <div class="card-capacity">
                  <p><i class="fas fa-users"></i><%= lesson.capacity %></p>
                </div>
                <div class="card-submit">
                  <form action="/lessons/<%=lesson.id%>/bookings/new">
                    <input type="submit" value="Book!" class="btn btn-primary">
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
