<div class="box">
  <div class="container-1">
        <%= form_tag lessons_path, method: :get do %>
        <div class="form-group form-inline" >
          <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a cooking class"
          %>
          <%= button_tag :submit do %>
          <i class="fa fa-search"></i>
          <% end %>
        </div>
        <% end %>
  </div>
</div>


