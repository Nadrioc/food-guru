<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-8">
            <div class="page-header align-top">
              <h2>
                <%= @user.first_name %> <%= @user.last_name %>'s Profile Page
              </h2>
              <p>Your info<%= link_to "(edit)", edit_user_registration_path %></p>
              <p class="text-left">Email: <%= @user.email %></p>
            </div>
          </div>
          <div class="text-center col-md-4">
            <div class="page-header align-top">
              <img class="show-image-page" src="<%= @user.image %>" alt="Profile Image">

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="container">
    <div class="container">
      <div class="row">
        <h4>About your host</h4>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Distinctio, commodi adipisci cupiditate atque. Autem rem adipisci nesciunt hic assumenda saepe illo libero voluptate accusamus repellat, iure nostrum quos velit reiciendis.</p>
      </div>
    </div>

    <h3>My Lessons</h3>
    <ul>
      <% @listed_lessons.each do |lesson| %>
      <li><%= lesson.title %></li>
      <%= link_to lesson_path(lesson), method: :delete, data: { confirm: "Are you sure?" } do %>
        DELETE
      <% end %>
      <li><% lesson.bookings.each do |booking| %>
          <% if booking.status == "Pending" %>
            <%= form_for booking, :method => :put do |f| %>
              <%= f.hidden_field :status, :value => "accepted" %>
              <%= f.submit "Approve" %>
            <% end %>
            <%= form_for booking, :method => :put do |f| %>
              <%= f.hidden_field :status, :value => "declined" %>
              <%= f.submit "Decline" %>
            <% end %>
          <% else %>
            <%= booking.status %>
          <% end %>
        <% end %>
      </li>
      <% end %>
    </ul>

    <h3>Lessons I signed up for</h3>
    <ul>
      <% @bookings.each do |booking| %>

      <li><%= booking.lesson.title %></li>
      <%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } do %>
      DELETE
      <% end %>
      <%= booking.status  %>
      <% end %>
    </ul>

    <%= link_to "Go Back", lessons_path %>
  </div>
</div>
